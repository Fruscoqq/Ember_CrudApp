{{page-title "Edit"}}
<div class="my-4">
  <h3 class="my-3">Edit page</h3>

<form >
  <div class="mb-3">
    {{input type="text" class="form-control" value=model.title placeholder="Add Movie.."}}
  </div>
  <div class="mb-3">
    {{textarea class="form-control" value=model.description placeholder="Describe your movie.."}}
  </div>
  <button {{action 'editMovie' model.id}} type="submit" class="btn btn-primary">Submit</button>
</form>
</div>